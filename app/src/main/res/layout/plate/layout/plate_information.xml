<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/iv_plate_icon"
        android:src="@drawable/message_ontouch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_plate_name"
        android:textSize="25sp"
        android:textColor="@color/colorDark"
        android:textStyle="bold"
        android:text="@string/forum"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_plate_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_plate_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plate_icon"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_plate_icon">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:text="@string/sign_in"
            android:gravity="center"
            android:textColor="@color/colorGray"
            android:textSize="20sp"
            android:id="@+id/btn_sign_in"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/sign_in"
            android:drawableStart="@drawable/sign_in"
            android:paddingStart="40dp"
            android:paddingRight="30dp"
            android:paddingEnd="30dp" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorGray"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_search"
            android:text="@string/search"
            android:textSize="20sp"
            android:textColor="@color/colorGray"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/search"
            android:drawableStart="@drawable/search"
            android:paddingLeft="40dp"
            android:paddingStart="40dp"
            android:paddingRight="30dp"
            android:paddingEnd="30dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>